{

  "description": "",
  "manifest_version": 2,
  "name": "ByeBuy",
  "version": "1.0",
  "homepage_url": "https://byebuy.de",
  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.de/*"],
      "js": ["buybye.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "permissions": [
    "storage",
    "unlimitedStorage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "info@byebuy.de"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/logo.webp",
      "32": "icons/logo.webp"
    }
  }

}
