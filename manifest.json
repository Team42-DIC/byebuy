{

  "description": "",
  "manifest_version": 2,
  "name": "ByeBuy",
  "version": "1.0",
  "homepage_url": "https://github.com/Team42/byebuy",
  "icons": {
    "48": "icons/logo.webp"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.eg/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.com/*",
        "*://*.amazon.cn/*",
        "*://*.amazon.in/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.sg/*",
        "*://*.amazon.ae/*",
        "*://*.amazon.sa/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.de/*",
        "*://*.amazon.it/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.pl/*",
        "*://*.amazon.es/*",
        "*://*.amazon.se/*",
        "*://*.amazon.com.tr/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.com.au/*"
      ],
      "js": ["buybye.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "permissions": [
    "storage",
    "unlimitedStorage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "team42@team42.github.io"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/logo.webp",
      "32": "icons/logo.webp"
    }
  }

}
